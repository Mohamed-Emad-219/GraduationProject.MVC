@{
    var term = ViewData["Term"] as Term;
    var courses = ViewData["Courses"] as List<Course>;
    var total = ViewData["TotalPrice"] ?? 0;
    var student = ViewData["Student"] as Student;

}
@if (term == null || courses == null || student == null)
{
    <p class="text-danger">Error: Missing term or courses data.</p>
}else {
<div class="card w-75 m-auto" id="student-info">
    <div class="card-header text-white bg-primary p-4">
        <h3>Student's Fees</h3>
    </div>
    <div class="card-body">
        <div class="row" id="info-fees">
            <div class="col-md-6">
                <p><strong>Student ID: </strong><span id="std-id">@student?.Id</span></p>
                    <p><strong>Student Name: </strong><span id="std-name">@student?.FirstName @student?.MiddleName @student?.LastName</span></p>
                    <p><strong>Level: </strong><span id="std-level">@term?.Level</span></p>
                    <p><strong>Registered Year: </strong><span id="std-year">@student?.RegisterYear</span></p>
            </div>
            <div class="col-md-6">
                <h4>New Courses: Semester @term?.Semester @term?.AcademicYear</h4>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Subject</th>
                            <th>Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in courses)
                        {
                            <tr>
                                <td>@course?.Name</td>
                                <td>3 hours</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <p><strong>Total Hours:</strong> @(courses?.Count * 3)</p>
                <p><strong>Payments:</strong> $@total</p>
            </div>
        </div>
        <div class="mt-3">
            <a asp-controller="FinancialAffairs" asp-action="Receipt" id="confirm-to-receipt" class="btn btn-primary">Confirm</a>
        </div>
    </div>
</div>
}

@section Scripts {
    <script>
        var info = document.getElementById("student-info");
            info.classList.remove("d-none");

    </script>
}