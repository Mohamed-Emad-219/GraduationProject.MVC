@{
    ViewData["Title"] = "Dashboard";
    var courses = ViewData["Courses"] as IEnumerable<Course>;
    var departments = ViewData["Departments"] as IEnumerable<Department>;
}
<section class="dashboard">
    <div class="container">
        <h2 class="text-primary mb-3">Courses</h2>
        <table class="table table-striped table-hover" id="courses-table">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>level</th>
                    <th>No of Lectures</th>
                    <th>No of Sections</th>
                    <th>No of Hours</th>
                    <th>Department</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in courses)
                {
                    <tr>
                        <td>@course.Code</td>
                        <td>@course.CourseName</td>
                        <td>@course.Level</td>
                        <td>@course.NoOfLec</td>
                        <td>@course.NoOfSec</td>
                        <td>@course.CreditHour</td>
                        <td>@course.Department.Name</td>
                    </tr>
                }
            </tbody>
        </table>
        <br>
        <div>
            <a class="btn btn-outline-danger w-25 d-block m-auto" asp-controller="Advisor" asp-action="RequestCourseModification">
                Send
                Request for modification
            </a>
        </div>
        <h2 class=" mb-3">Departments</h2>
        <table class="table table-striped table-hover" id="departments-table">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dep in departments)
                {
                    <tr>
                        <td>@dep.Id</td>
                        <td>@dep.Name</td>
                    </tr>
                }
            </tbody>
        </table>
        <br>
        <div>
            <a class="btn btn-outline-danger w-25 d-block m-auto" asp-controller="Advisor" asp-action="RequestDepartmentModification">
                Send Request
                for modification
            </a>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/advisor.js"></script>
    <partial name="_ValidationScriptsPartial" />
}

