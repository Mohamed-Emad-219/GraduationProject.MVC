@{
    ViewData["Title"] = "Edit Profile";
}


<div class="container d-flex justify-content-center align-items-center">
    <div class="card p-4 shadow" style="width: 450px;">
        <h3 class="text-center mb-3">Edit Personal Info</h3>
        <form asp-controller="Auth" asp-action="ShowProfile" method="post">
        <div class="text-center">
            <img id="profileImage" src="~/images/default-profile.png" class="rounded-circle mb-3 w-50" alt="Profile">
            <div class="input-group mb-3">
                <input type="file" class="form-control" id="profilePic" accept="image/*">
                <label class="input-group-text" for="profilePic"><i class="fas fa-upload"></i></label>
            </div>
        </div>
        <div class="mb-2">
            <label class="form-label" for="Email">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" value="">
        </div>
        <div class="mb-2">
            <label class="form-label" for="Address">Address</label>
            <input type="text" class="form-control" id="Address" name="Address" value="">
        </div>
        <div class="mb-3">
            <label class="form-label" for="MobilePhone">Mobile Phone</label>
            <input type="text" class="form-control" name="MobilePhone" id="MobilePhone">
        </div>
        <a class="btn btn-primary w-100" type="submit" >Confirm</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
