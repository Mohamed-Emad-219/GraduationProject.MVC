@{
    ViewData["Title"] = "Receipts";
    var receipts = ViewData["Receipts"] as IEnumerable<Receipt>;
}

<section class="receipts">
    <div class="container py-5">
        <h1 class="fs-3 mb-4 text-center">Receipts</h1>
        <div class="w-60 m-auto">
            <table class="table table-hover table-striped" id="receipts">
                <thead class="table-secondary">
                    <tr>
                        <th>#</th>
                        <th>Student ID</th>
                        <th>Name</th>
                        <th>Payment</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @if(receipts is not null) {
                        @foreach(var receipt in receipts) {
                            <tr>
                                <td>@receipt.ReceiptId</td>
                                <td>@receipt.StudentId</td>
                                <td>@receipt.Student.FirstName @receipt.Student.MiddleName @receipt.Student.LastName</td>
                                <td>@receipt.AmountDue</td>
                                <td>
                                    <a asp-action="ReceiptInfo" asp-controller="StudentAffairs" asp-route-id="@receipt.Id" class="btn btn-small btn-primary">Open</a>
                                    <button onclick="window.print()" class="btn btn-small btn-secondary">Print</button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

