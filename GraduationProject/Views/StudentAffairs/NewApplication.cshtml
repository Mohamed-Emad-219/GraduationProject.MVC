@{
    ViewData["Title"] = "New Application";
    var colleges = ViewData["Colleges"] as List<College>;
}
@model Student
<div class="container d-flex justify-content-start">
    <div class="w-50 p-4 m-auto bg-white ">
        <h2 class="text-center mb-4">Fill New Student Application</h2>
        <form method="post" asp-controller="StudentAffairs" asp-action="NewApplicationAdd">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-2">
                <label class="form-label" for="FirstName">First Name:</label>
                <input type="text" class="form-control" name="FirstName" id="FirstName">
                <span class="text-danger" asp-validation-for="FirstName"></span>
            </div>

            <div class="mb-2">
                <label class="form-label" for="MiddleName">Middle Name:</label>
                <input type="text" class="form-control" name="MiddleName" id="MiddleName">
                <span class="text-danger" asp-validation-for="MiddleName"></span>
            </div>

            <div class="mb-2">
                <label class="form-label" for="LastName">Last Name:</label>
                <input type="text" class="form-control" name="LastName" id="LastName">
                <span class="text-danger" asp-validation-for="LastName"></span>
            </div>

            <div class="mb-2">
                <label class="form-label" for="SSN">SSN:</label>
                <input type="number" class="form-control" name="SSN" id="SSN">
                <span class="text-danger" asp-validation-for="SSN"></span>
            </div>

            <div class="mb-2">
                <label class="form-label" for="MobilePhone">Mobile Number:</label>
                <input type="tel" class="form-control" name="MobilePhone" id="MobilePhone">
                <span class="text-danger" asp-validation-for="MobilePhone"></span>
            </div>

            <div class="mb-2">
                <label class="form-label" for="HomePhone">Home Phone:</label>
                <input type="tel" class="form-control" name="HomePhone" id="HomePhone">
                <span class="text-danger" asp-validation-for="HomePhone"></span>
            </div>

            <div class="mb-2">
                <label class="form-label" for="Address">Address:</label>
                <input type="text" class="form-control" name="Address" id="Address">
                <span class="text-danger" asp-validation-for="Address"></span>
            </div>

            <div class="mb-2">
                <label class="form-label" for="HighSchoolGrade">High School Grade:</label>
                <input type="text" class="form-control" name="HighSchoolGrade" id="HighSchoolGrade">
                <span class="text-danger" asp-validation-for="HighSchoolGrade"></span>
            </div>

            <div class="mb-2">
                <label class="form-label" for="CollegeId">Choosen College:</label>
                <select class="form-select" id="College" name="CollegeId">
                    <option selected>Choose...</option>
                    @if (colleges is not null) {
                        @foreach(var college in colleges) {
                            <option value="@college?.Id">@college?.Name</option>
                        }
                    }
                </select>
                <span class="text-danger" asp-validation-for="CollegeId"></span>
            </div>

            <div class="mb-2">
                <label class="form-label" for="BirthDateTime">Date of Birth:</label>
                <input type="date" class="form-control" name="BirthDateTime" id="BirthDateTime">
                <span class="text-danger" asp-validation-for="BirthDateTime"></span>
            </div>

            <div class="mb-2">
                <label class="form-label" for="Gender">Gender:</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="Gender" value="@Gender.Male">
                    <label class="form-check-label">Male</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="Gender" value="@Gender.Female">
                    <label class="form-check-label">Female</label>
                </div>
                <span class="text-danger" asp-validation-for="Gender"></span>
            </div>
            <div class="text-start">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}