@{
	ViewData["Title"] = "Application Info";
}

<div class="container d-flex justify-content-start py-5">
    <div class="w-50 m-auto bg-white ">
        <h2 class="text-center mb-4">Application</h2>
        <div class="card p-3 shadow">
            <div class="mb-2">
                <label class="form-label">First Name:</label>
                <span id="FirstName"></span>
            </div>

            <div class="mb-2">
                <label class="form-label">Middle Name:</label>
                <span id="MiddleName"></span>
            </div>

            <div class="mb-2">
                <label class="form-label">Last Name:</label>
                <span id="LastName"></span>
            </div>

            <div class="mb-2">
                <label class="form-label">SSN:</label>
                <span id="SSN"></span>
            </div>

            <div class="mb-2">
                <label class="form-label">Mobile Phone:</label>
                <span id="MobilePhone"></span>
            </div>

            <div class="mb-2">
                <label class="form-label">Home Phone:</label>
                <span id="HomePhone"></span>
            </div>

            <div class="mb-2">
                <label class="form-label">High School Grade:</label>
                <span id="HighSchoolGrade"></span>
            </div>

            <div class="mb-2">
                <label class="form-label">Address:</label>
                <span id="Address"></span>
            </div>

            <div class="mb-2">
                <label class="form-label">Choosen College:</label>
                <span id="College"></span>
            </div>

            <div class="mb-2">
                <label class="form-label">Date of Birth:</label>
                <span id="Birth"></span>
            </div>

            <div>
                <label class="form-label">Gender:</label>
                <span id="Gender"></span>
            </div>

            <div class="d-flex justify-content-around align-items-center">
                <button class="btn btn-success" onclick="alert('Send Successfuly')">Waiting List</button>
                <button class="btn btn-danger" onclick="alert('Send Successfuly')">Reject</button>
            </div>
        </div>
    </div>
</div>

