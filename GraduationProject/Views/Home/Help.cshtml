<div class="container">
    <header class="text-center mb-4">
        <h1 class="text-dark">FAQs</h1>
        <p class="lead">AI-Driven Academic Advisor Platform</p>
    </header>
    <div class="d-flex gap-5 justify-content-between align-items-start">
        <div class="w-100">
            <!-- FAQ Sections -->
